<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.example.application.components.data.Message2" table = "messages2">

        <id name = "id" type = "int" column = "ID">
            <generator class="identity"/>
        </id>

        <property name = "user1_ID" column = "user1_ID" type = "int"/>
        <property name = "user2_ID" column = "user2_ID" type = "int"/>
        <property name = "content" column = "content" type = "string"/>
        <property name = "localDateTime" column = "dateTime"/>

    </class>
</hibernate-mapping>